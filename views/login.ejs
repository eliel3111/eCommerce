<!DOCTYPE html>
<html>
<head>
  <title>Registro</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="/styles/register.css">
</head>
<body>
  <div class="login-nav-container">
    <div class="register-logo-container">
        <img  src="/images/logo_negro.png" alt="Logo Vendido">
    </div>
  </div>
  <!-- Center of the page -->
  <div class="full-screen">
  <div class="login-container" 
    >
    <h2>Inicia sesión</h2>
    <div class="login-subtitle">y vende totalmente gratis!</div>
    <% console.log(messages.error[0]); %>

    <% if (messages.error) { %>
  <div class="error">
    <% messages.error.forEach(function(msg) { %>
      <div class="login-error"><%= msg %></div>
    <% }) %>
  </div>
<% } %>
    <form action="/user/login" method="POST" >
      <input name="username" type="email" placeholder="Correo electrónico" required />
      <input name="password" type="password" placeholder="Contraseña" required />

      <button type="submit" class="btn-primary">Iniciar sesión</button>
    </form>

    <div class="login-create-account">
      ¿No tienes cuenta?     <a href="#">    Crea una aquí</a>
    </div>

    <div class="google-btn">
      <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/google/google-original.svg" alt="Google Icon">
      Iniciar sesión con Google
  </div>
  </div>
  </div>
  </div>


<!--<script src="/registro.js" type="text/javascript"></script>-->

    
  </script>
</body>
</html>
