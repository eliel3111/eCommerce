<!DOCTYPE html>
<html>
<head>
  <title>Registro</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/css" href="/styles/register.css">
</head>
<body>
  <div class="login-nav-container">
    <a href="/" class="login-back">
      <svg class="back-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
      <path d="M15 18L9 12L15 6" stroke="#FED700" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      <div class="back-text">Volver al inicio</div>
    </a>

    <div class="login-logo-container">
        <img  src="/images/logo_negro.png" alt="Logo Vendido">
    </div>
  </div>
  <!-- Center of the page -->
  <div class="full-screen">
    <a href="/" class="mobile-only">
      <svg class="back-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
        <path d="M15 18L9 12L15 6" stroke="#FED700" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      <div class="back-text-movil">Volver al inicio</div>
    </a>




    <div class="login-container">
      <h2>Inicia sesión</h2>
      <div class="login-subtitle">y vende totalmente gratis!</div>

      <% if (locals.messages && locals.messages.error && locals.messages.error.length) { %>
      <div class="error">
        <% locals.messages.error.forEach(function(msg) { %>
          <div class="login-error"><%= msg %></div>
        <% }) %>
      </div>
        <% } else if (typeof locals.mensaje !== 'undefined' && locals.mensaje) { %>
          <div class="error">
            <div class="login-error"><%= locals.mensaje %></div>
          </div>    
        <% } %>

      <form action="/user/login" method="POST" >
        <input name="username" type="email" placeholder="Correo electrónico" required />
        <input name="password" type="password" placeholder="Contraseña" required />

        <button type="submit" class="login-btn-primary" disabled>Iniciar sesión</button>
      </form>

      <div class="login-create-account">
        ¿No tienes cuenta?     <a href="/user/signup">Crea una aquí</a>
      </div>

      <a href="/user/auth/google" class="google-btn">
        <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/google/google-original.svg" alt="Google Icon">
        Iniciar sesión con Google
      </a>
    </div>
  </div>
  </div>


<script src="/inicio.js" type="text/javascript"></script>
</body>
</html>
